        <div class="speakercard" id="bruno">
          <div class="photoblock">
            <Image
              src={brunoLauwers}
              class="speaker-photo"
              alt="Bruno Lauwers" />
          </div>
          <div class="textblock">
            <h2>Bruno Lauwers</h2>
